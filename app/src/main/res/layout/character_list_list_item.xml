<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:paddingLeft="@dimen/activity_horizontal_margin"
	android:paddingRight="@dimen/activity_horizontal_margin"
	tools:context="link.standen.michael.fatesheets.activity.CharacterListActivity">

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/character_name"
		android:layout_alignParentStart="true"
		android:layout_centerVertical="true"
		android:padding="@dimen/activity_vertical_margin"
		android:paddingStart="@dimen/character_name_padding"
		android:paddingEnd="@dimen/character_name_padding"
		android:textAppearance="@style/TextAppearance.AppCompat.Medium"
		android:maxLines="1" />

	<ImageButton
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/more_character"
		android:layout_alignParentEnd="true"
		android:layout_centerVertical="true"
		android:src="@drawable/ic_more_vert_black_24dp"
		android:background="?selectableItemBackgroundBorderless"
		android:padding="@dimen/action_padding"/>

</RelativeLayout>
